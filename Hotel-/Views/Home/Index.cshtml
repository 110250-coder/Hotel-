@using Hotel_.Databases
@model List<locaties>
@{
    ViewData["Title"] = "Hotel {name}";
}



<section id="hero">
    <div class="container">
        <h1>Welcome to Cool Hotel Chain</h1>
        <p>Experience luxury like never before</p>
        <a href="/booking" class="btn">Book Now</a>
    </div>
</section>

<section id="locaties">
    @foreach (locaties locatie in Model)
    {
        <a href="locaties/@locatie.Id">
            <p>@locatie.Stad</p>
        </a>
        
    }
</section>

<section id="rooms">
    <div class="container">
        <h2>Our Rooms</h2>
        <div class="room">
            <img src="https://via.placeholder.com/600x400/1abc9c/ffffff?text=Room+1" alt="Room 1">
            <h3>Deluxe Room</h3>
            <p>Starting from $200 per night</p>
        </div>
        <div class="room">
            <img src="https://via.placeholder.com/600x400/3498db/ffffff?text=Room+2" alt="Room 2">
            <h3>Executive Room</h3>
            <p>Starting from $250 per night</p>
        </div>
        <div class="room">
            <img src="https://via.placeholder.com/600x400/e74c3c/ffffff?text=Room+3" alt="Room 3">
            <h3>Premium Suite</h3>
            <p>Starting from $300 per night</p>
        </div>
    </div>
</section>

<section id="services">
    <div class="container">
        <h2>Our Services</h2>
        <ul>
            <li>24-hour room service</li>
            <li>Swimming pool</li>
            <li>Spa and wellness center</li>
            <li>Business center</li>
            <li>Meeting and event facilities</li>
        </ul>
    </div>
</section>
